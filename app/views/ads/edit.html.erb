  <%= f.error_messages %>
  <p><b>Nazwa</b><br /><%= f.text_field :name %></p>
  <p><b>Opis</b><br /><%= f.text_area :description %></p>
  <p><b>Cena</b><br /><%= f.text_field :price %></p>
  <p><b>Nr SprzedajÄ…cego</b><br /><%= f.text_field :seller_id %></p>
